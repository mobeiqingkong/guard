<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.guard_mobile.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.guard_mobile.ui.dashboard.DashboardFragment"
        android:label="@string/title_position"
        tools:layout="@layout/fragment_position" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.guard_mobile.ui.notifications.NotificationsFragment"
        android:label="@string/title_userInfo"
        tools:layout="@layout/fragment_userInfo" />
</navigation>